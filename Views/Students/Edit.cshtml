@model StudentManagement.web.Models.Entities.Student

<h1>Edit Student</h1>

@if (Model is null)
{
    <p>Student Not Found</p>
}
else
{
   
<form method="post">
    <div class="mt-3">
        <label class="form-lable">ID</label>
        <input type="text" class="form-control" asp-for="Id" />
    </div>
    <div class="mt-3">
        <label class="form-lable">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="mt-3">
        <label class="form-lable">Email</label>
        <input type="text" class="form-control" asp-for="Email" />
    </div>
    <div class="mt-3">
        <label class="form-lable">Phone</label>
        <input type="text" class="form-control" asp-for="Phone" />
    </div>

    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed" />
        <label class="form-check-label" for="Subscribed">Subscribed</label>

    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Update</button>
        <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Students">Delete</button>
    </div>
</form>

        }